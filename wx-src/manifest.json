{
    "manifest_version": 2,
    "name": "Panic Button/wx",
    "description": "Quickly hide all browser windows with a click of a button.",
    "version": "4.0a1+",
    "homepage_url": "http://aecreations.sourceforge.net/panicbutton/index.php",

    "icons": {
        "48": "icons/panicbutton-wx.png"
    },

    "permissions": ["storage", "sessions"],
      
    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
	"default_icon": {
	    "16": "icons/default16.png",
	    "32": "icons/default32.png",
	    "64": "icons/default64.png"
	},
	"default_title": "Panic Button/wx"
    },

    "commands": {
	"ae-panicbutton": {
	    "suggested_key": { "default": "F9" },
	    "description": "Panic Button"
	}
    },
    
    "options_ui": {
	"page": "options.html"
    }
}
