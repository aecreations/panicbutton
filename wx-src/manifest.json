{
    "manifest_version": 2,
    "name": "Panic Button",
    "description": "Quickly hide all browser windows with a click of a button.",
    "version": "4.0b2",
    "homepage_url": "http://aecreations.sourceforge.net/panicbutton/index.php",
    "applications": {
	"gecko": {
	    "strict_min_version": "52.0"
	}
    },
    
    "icons": {
        "48": "img/panicbutton-wx.png"
    },

    "permissions": ["history", "storage", "sessions"],
      
    "background": {
        "scripts": ["modules/aeConst.js", "background.js"]
    },

    "browser_action": {
	"default_icon": {
	    "16": "img/default16.svg",
	    "32": "img/default32.svg",
	    "64": "img/default32.svg"
	},
	"default_title": "Panic Button/wx"
    },

    "commands": {
	"ae-panicbutton": {
	    "suggested_key": { "default": "F9" },
	    "description": "Panic Button"
	}
    },
    
    "options_ui": {
	"page": "pages/options.html",
        "open_in_tab": true,
	"browser_style": true
    }
}
