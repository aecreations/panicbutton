{
    "manifest_version": 2,
    "name": "__MSG_extName__",
    "description": "__MSG_extDesc__",
    "version": "4.3a0+",
    "homepage_url": "http://aecreations.sourceforge.net/panicbutton/index.php",
    "author": "AE Creations",

    "applications": {
	"gecko": {
	    "strict_min_version": "68.0"
	}
    },
    
    "icons": {
        "48": "img/icon.svg",
        "96": "img/icon.svg"
    },

    "permissions": ["history", "storage", "sessions", "tabs"],
      
    "background": {
        "scripts": ["modules/aeConst.js", "background.js"]
    },

    "browser_action": {
	"default_icon": {
	    "16": "img/default16.svg",
	    "32": "img/default32.svg",
	    "64": "img/default32.svg"
	},
	"default_title": "__MSG_defaultBtnLabel__"
    },

    "commands": {
	"ae-panicbutton": {
	    "suggested_key": { "default": "F9" },
	    "description": "__MSG_cmdDesc__"
	}
    },
    
    "options_ui": {
	"page": "pages/options.html",
        "open_in_tab": true,
	"browser_style": true
    },

    "default_locale": "en"
}
